<!DOCTYPE html>
<html>

    <head>
          
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
        
        <title> <%= title %></title>

        <!-- Scripts -->
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>

    </head>

    <body>

      <div id="header"> <%-include('user/header.ejs')%></div>

      <% if (message) { %>
          <div style="text-align: center;"class="alert alert-<%= message.type %>" role="alert">
              <strong><%= message.intro %></strong> <%= message.message %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
          </div>
      <% } %>
      
      <div style="height: 100%;">

        <div class="row" style="height:100%; margin: 0;">

            <section id="display_content" class="col-9" style="display: flex; flex-flow: column; background-color: #F4F6F9;">
              
              <div id="heading" style="padding: 2%; margin: 2% 0 1%; border: 2px solid #343A40; border-radius: 5px; text-align: center; background-color: #FFFFFF;">

                <h2 id="current_stage">Database Engine</h2>

              </div>

              <div style="padding: 1%; margin: 1% 0 4%; border: 2px solid #343A40; border-radius: 5px; flex: 1 1 auto; background-color: #FFFFFF;">

                <div style="margin: 1% 3%; padding: 2%; background-color: #F4F6F9; border-radius: 5px;">
                  <div id="group1" class="card-deck">

                    <% step1.forEach(card => { %>
                      <div id="<%= card.service_name.replace(/\s+/g,'') %>-card" class="card group1 card-settings" style="text-align: center; max-width: 204px;">
                        <img class="card-img-top mx-auto mt-1" src='/img/<%=card.service_icon%>' style="width:5rem; height:5rem;" alt="Card image cap">
                        <div class="card-body" role="button">
                          <h6 class="card-title"><input id="<%=card.service_name%>" class="" name="radio1" value="<%=card.service_name%>" type="radio">
                            <label for="<%=card.service_name%>"><%=card.service_name%></label></h6>
                          <!-- <p class="card-text"><%#=card.service_desc%></p> -->
                        </div>
                      </div>
                    <% }) %>

                  </div>

                  <div id="group2" class="card-deck">
                    <!-- <%# if (step2) { %>
                      <%# step2.forEach(card => { %>
                        <p><%#=card.option_heading%></p>
                        <div id="<%#= card.option_heading.replace(/\s+/g,'') %>-card" class="card group2 card-settings" style="text-align: center; max-width: 204px;">
                          <img class="card-img-top mx-auto mt-1" src='/img/<%#=card.option_heading%>' style="width:5rem; height:5rem;" alt="Card image cap">
                          <div class="card-body" role="button">
                            <h6 class="card-title"><input id="<%#=card.option_heading%>" name="radio1" value="<%#=card.option_heading%>" type="radio">
                              <label for="<%#=card.option_heading%>"><%#=card.option_heading%></label></h6>
                            <p class="card-text"><%#=card.service_desc%></p>
                          </div>
                        </div>
                    <%# })} else {console.log('no step2 data')} %> -->

                  </div>

                </div>

              </div>
                
            </section>

            <section id="details" class="col-3 right" style="background-color: #343A40; padding: 2% 0;">
              
              <h4 style="color:white; text-align: center; padding: 8% 1% 10%; border-bottom: 2px solid white;">Service Details</h4>
              
              <div style="padding-top: 2%;">
                <%stages.forEach(stage => { %>
                  <h4 id="stage<%= stage.stage_id %>" class="stages" style="color: white; text-align: center; margin-bottom: 5%;"><%=stage.stage_name%></h4>
                  <p id="<%= stage.stage_name.replace(/\s+/g,'') %>" style="background-color: green; padding: 0 5%;">Test</p>
                <% }) %>
              </div>

            </section>

        </div>

      </div>
      
      <script src="scripts/index.js"></script>

    </body>
</html>
