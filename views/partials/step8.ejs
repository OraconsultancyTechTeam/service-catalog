<div class="container collapse" id="s8">
    <div class="row mt-2">
        <div class="col-12">
            
                <div class="form-group row">
                    <div class="col-md-12">

                        <button type="button" class="collapsible open header-settings" id="header8">Step 8: Details</button>
                            
                        <div class="content" id="cont8" style="text-align: center; display: block;" onchange="commentArea()">
                            <label>Due Date:</label>
                            <input type="date" name="dueDate" id="dueDate" placeholder="dd/mm/yyyy" required>
                            <label>Requested By:</label>
                            <input id="reqBy" name="reqBy" placeholder="Tom Smith" required>
                            <label>Manager's Email:</label>
                            <input type="email" name="mangEmail" id="mangEmail" placeholder="manager@email.com" required>
                        </div>

                    </div>
                </div>
          
        </div>
    </div>
</div>

<script>

    function commentArea() {
        var element = $("#cont8").text();
        var due = 'Due By: ' + $('#dueDate').val()
        var req = 'Requested by: ' + $('#reqBy').val()
        var mang = "Manager's Email: " + $('#mangEmail').val()
        
        $('#step8-text').html(due + '<br>' + req + '<br>' + mang);

        // Setting service details height to be centered in all viewports
        var servDetHeight = document.querySelector('#servDetails').offsetHeight;
        var offsetServDet = servDetHeight / 2;
        $('#servDetails').css('top', window.innerHeight / 2 - offsetServDet)
        
        if ($('#dueDate').val() && $('#reqBy').val() && $('#mangEmail').val()) {
            $("#cont8").css("display", "none");
            $("#header8").removeClass("open");
            $('#sub').collapse('show');
            //document.getElementById("sub").scrollIntoView();
            setTimeout(function () {
                document.querySelector("#sub").scrollIntoView({ behavior: "smooth" });    
            }, 350);
        }
        
    }

</script>